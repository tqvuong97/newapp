<h1>Microposts</h1>
<%= link_to 'New Micropost', new_user_micropost_path(current_user.id) %>
<%= render 'form_search',user: current_user%>
<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>User</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
              <td><%= micropost.title %></td>
              <td><%= micropost.content %></td>
              <td><%= micropost.user.email %></td>
              <td><%= link_to 'Show', user_micropost_path(current_user.id,micropost),class: "btn btn-info" %></td>
              <td><%= link_to 'Edit', edit_user_micropost_path(current_user.id,micropost),class: "btn btn-success" %></td>
              <td><%= link_to 'Destroy', user_micropost_path(current_user.id,micropost.id),class: "btn btn-danger", 'data-method' => :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
