<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.title %></td>
        <td><%= micropost.content %></td>
        <td><%= micropost.user.email %></td>
        <td><%= link_to 'Show', user_micropost_path(current_user.id,micropost) %></td>
        <td><%= link_to 'Edit', edit_user_micropost_path(current_user.id,micropost) %></td>
        <td><%= link_to 'Destroy', user_micropost_path(current_user.id,micropost.id), 'data-method' => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_user_micropost_path(current_user.id) %>
